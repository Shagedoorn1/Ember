.target {
    ember
}

.src {
    src/main.c
    src/parser.c
    src/build.c 
    src/util.c
}

.flags {
    -Wall
    -Wextra
}

.include {
    include
}

.task {
    run: ./build/ember;
    clean: rm -rf build/*.o
    rebuild: ./ember clean && ./ember
    install: ln -sf $(pwd)/build/ember /usr/local/bin/ember
}

.languages {
    c
}

.out {
    ./build/
}

.pre {
    echo "Compiling ember..."
}

.version {
    0.1.0
}